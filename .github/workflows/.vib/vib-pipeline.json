{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/wordpress"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "runtime_parameters": "",
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}"
        }
      },
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "IGNORE_ALL"
          }
        },
        {
          "action_id": "grype",
          "params": {
            "threshold": "IGNORE_ALL"
          }
        },
        {
          "action_id": "health-check",
          "params": {
            "app_protocol": "HTTP",
            "endpoint": "lb-wordpress-http"
          }
        },
        {
          "action_id": "resilience-tests",
          "params": {
            "test_cases": ["testKubernetesPodDelete"]
          }
        }
      ]
    }
  }
}